# Environment Configuration for Backend

# Flask Configuration
FLASK_APP=backend/app.py
FLASK_ENV=development
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Database
DATABASE_URL=sqlite:///plates.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/plates_db
# Example: DATABASE_URL=postgresql://postgres:mypassword@localhost:5432/plates_detection

# MySQL (alternative)
# DATABASE_URL=mysql://username:password@localhost:3306/plates_db

# Cloud Database Examples:
# Railway: DATABASE_URL=postgresql://user:pass@containers-us-west-123.railway.app:5432/railway
# Render: DATABASE_URL=postgresql://user:pass@dpg-xxxxx.oregon-postgres.render.com/dbname
# AWS RDS: DATABASE_URL=postgresql://user:pass@mydb.xxxxx.us-east-1.rds.amazonaws.com:5432/plates_db

# Model Configuration
MODEL_WEIGHTS=models/yolov7.pt
DEVICE=0
# DEVICE=cpu  # Use this for CPU-only inference
CONF_THRESHOLD=0.25
IOU_THRESHOLD=0.45
IMG_SIZE=640

# Server Configuration
HOST=0.0.0.0
PORT=5000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload
MAX_UPLOAD_SIZE_MB=50
UPLOAD_FOLDER=uploads

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
