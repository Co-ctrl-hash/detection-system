# Environment Configuration for Backend

# Flask Configuration
FLASK_APP=backend/app.py
FLASK_ENV=development
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Database
DATABASE_URL=sqlite:///plates.db
# For MySQL: DATABASE_URL=mysql://user:password@localhost/plates_db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/plates_db

# Model Configuration
MODEL_WEIGHTS=models/yolov7.pt
DEVICE=0
# DEVICE=cpu  # Use this for CPU-only inference
CONF_THRESHOLD=0.25
IOU_THRESHOLD=0.45
IMG_SIZE=640

# Server Configuration
HOST=0.0.0.0
PORT=5000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload
MAX_UPLOAD_SIZE_MB=50
UPLOAD_FOLDER=uploads

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
