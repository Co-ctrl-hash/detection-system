{
  "version": 2,
  "name": "number-plate-detection",
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "backend/app.py"
    }
  ],
  "env": {
    "DEVICE": "cpu",
    "MODEL_WEIGHTS": "models/yolov7.pt",
    "CONF_THRESHOLD": "0.25"
  }
}
